{
	"extends": "@sapphire/ts-config",
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"tsBuildInfoFile": "dist/.tsbuildinfo",
		"module": "ES2022",
		"moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
        "lib": ["es2022", "dom"]
	},
	"include": ["src"]
}